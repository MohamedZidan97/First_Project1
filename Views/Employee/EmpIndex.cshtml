@{
    ViewBag.Title = SharedLocalizer["Employee"];
}

@model IQueryable<TempleteD.Models.EmpVM>
<h1>@SharedLocalizer["Employee"]</h1>

<link href="~/datatables/css/datatables.bootstrap.css" rel="stylesheet" />
<link href="~/datatables/css/datatables.bootstrap.min.css" rel="stylesheet" />
     <div>
    <a asp-controller="Employee" asp-action="EmpIndex" asp-route-culture="en-US">@SharedLocalizer["EN"]</a>

    <a asp-controller="Employee" asp-action="EmpIndex" asp-route-culture="ar-EG">@SharedLocalizer["AR"]</a>
     </div>

<body>
    <table class="table table-striped table-bordered text-center">
        <tr>
            
            <th class="text-center">@SharedLocalizer["Name"]</th>
            <th class="text-center">@SharedLocalizer["Salary"]</th>
            <th class="text-center">@SharedLocalizer["Address"]</th>
            <th class="text-center">@SharedLocalizer["Note"]</th>
            <th class="text-center">@SharedLocalizer["Email"]</th>
            <th class="text-center">@SharedLocalizer["HireDate"]</th>
            <th class="text-center">@SharedLocalizer["IsActive"]</th>
            <th class="text-center">@SharedLocalizer["Department"]</th>
            <th class="text-center">@SharedLocalizer["Branch"]</th>
            <th class="text-center">@SharedLocalizer["Edit"]</th>
            <th class="text-center">@SharedLocalizer["Delete"]</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
               
                <td>@item.Name </td>
                <td>@item.Salary </td>
                <td>@item.Address</td>
                <td>@item.Note</td>
                <td>@item.Email</td>
                <td>@item.HireDate.Date.ToShortDateString()</td>
                <td>@item.IsActive</td>
                <td>@item.DepartmentId</td>
                <td>@item.BranchId</td>
                <td>
                    <a asp-controller="Employee" asp-action="EmpEdit" asp-route-id="@item.Id" class="btn btn-success">@SharedLocalizer["Edit"]</a>
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="EmpDelete" asp-route-id="@item.Id" class="btn btn-danger">@SharedLocalizer["Delete"]</a>
                </td>
            </tr>

        }



    </table>


    <script src="~/datatables/js/jquery.datatables.js"></script>
    <script src="~/datatables/js/jquery.datatables.min.js"></script>
    <script src="~/datatables/js/datatables.bootstrap.js"></script>
    <script src="~/datatables/js/datatables.bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</body>
@{
    ViewBag.Title = "Department";

}
@model IQueryable<TempleteD.Models.DepVM>
<h1>Department</h1>




<body>
    <table class="table table-striped table-bordered text-center">

        <tr>
            <th class="text-center"> Name</th>
            <th class="text-center"> ManagerName</th>
            <th class="text-center"> NumberOfEmployees</th>
            <th class="text-center"> Edit</th>
            <th class="text-center"> Delete</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ManagerName</td>
                <td>@item.NumberOfEmployees  </td>
                <td>
                    <a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                </td>
                <td>
                    <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </table>
</body>
